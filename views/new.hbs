<div class="text-center m-3">
  <h2>請輸入你的支出</h2>
  <div id="passwordHelpBlock" class="form-text">
    * 為必填欄位
  </div>
</div>

<form action="/records" method="post">
  <div class="row g-3 align-items-center d-flex justify-content-center mb-3">
    <div class="col-auto">
      <label for="name" class="col-form-label">名稱 *：</label>
    </div>
    <div class="col-auto">
      <input type="text" id="name" name="name" placeholder="請輸入消費名稱" class="form-control" aria-labelledby="nameHelpInline" style="width: 20rem;">
    </div>
  </div>

  <div class="row g-3 align-items-center d-flex justify-content-center mb-3">
    <div class="col-auto">
      <label for="date" class="col-form-label">日期 *：</label>
    </div>
    <div class="col-auto">
      <input type="date" id="date" name="date" class="form-control" aria-labelledby="dateHelpInline" style="width: 20rem;">
    </div>
  </div>

  <div class="row g-3 align-items-center d-flex justify-content-center mb-3">
    <div class="col-auto">
      <label for="category" class="col-form-label">類別 *：</label>
    </div>
    <div class="col-auto">
      <select class="form-select" id="category" name="categoryId" aria-label="Default select example" style="width: 20rem;">
        <option selected hidden>請選擇消費類別</option>
        {{#each categories}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="row g-3 align-items-center d-flex justify-content-center mb-3">
    <div class="col-auto">
      <label for="amount" class="col-form-label">金額 *：</label>
    </div>
    <div class="col-auto">
      <input type="number" id="amount" name="amount" placeholder="請輸入消費金額" class="form-control" aria-labelledby="amountHelpInline" style="width: 20rem;" min="0">
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3 mb-5">
    <a href="/" class="btn btn-danger">取消</a>
    <button class="btn btn-primary ms-3">新增支出</button>
  </div>

</form>
