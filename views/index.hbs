<div class="d-flex justify-content-center m-2">
  <select class="form-select" aria-label="Default select example">
    <option selected hidden>類別</option>
    <option value="1">餐飲食品</option>
    <option value="2">交通出行</option>
    <option value="3">休閒娛樂</option>
    <option value="4">家居物業</option>
  </select>
</div>

<div class="d-flex justify-content-between m-3">
  <p>總金額：</p>
  <p class="p-3" style="font-size: 3em;">23000</p>
</div>

<ul class="list-group">
  {{#each CATEGORY}}
  <li class="list-group-item">
    <div class="d-flex justify-content-between align-items-center">
      <i class="{{this}} ms-3" style="max-width: 1rem;"></i>
      <div class="d-flex flex-column flex-grow-1 ms-5">
        <p class="m-0">name</p>
        <p class="m-0">mm/dd hh:ss</p>
      </div>
      <div class="me-3">
        amount
      </div>
      <a href="/expenses/edit" class="btn btn-primary ms-2">修改</a>
      <form action="/" method="post">
        <button class="btn btn-danger ms-2">刪除</button>
      </form>
    </div>
  </li>
  {{/each}}
</ul>
<div class="d-flex justify-content-center mt-3 mb-5">
  <a href="/expenses/new" class="btn btn-primary">新增支出</a>
</div>